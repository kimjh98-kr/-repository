#include <iostream>
using namespace std;

int main() {
    double numbers[5];
    double total = 0, average;

    for (int i = 0; i < 5; i++) {
        cout << "학생 " << i + 1 << "의 점수: ";
        cin >> numbers[i];
        total += numbers[i];
    }

    average = total / 5;

    cout << "점수 합계: " << total << endl;
    cout << "점수 평균: " << average << endl;

    return 0;
}
